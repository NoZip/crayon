path : path PATH_SEPARATOR point {
    $1->append(*$3);
    delete $3;
    $$ = $1;
}
| path PATH_SEPARATOR PLUS point {
    $1->append_relative(*$4);
    delete $4;
    $$ = $1;
}
| path PATH_SEPARATOR CYCLE {
    $1->append_cycle();
    $$ = $1;
}
| point PATH_SEPARATOR point {
    Path *c = new Path();
    c->append(*$1);
    c->append(*$3);
    delete $1;
    delete $3;
    $$ = c;
}
| point PATH_SEPARATOR PLUS point {
    Path *c = new Path();
    c->append(*$1);
    c->append_relative(*$4);
    delete $1;
    delete $4;
    $$ = c;
}
| point PATH_SEPARATOR CYCLE {
    Path *c = new Path();
    c->append(*$1);
    c->append_cycle();
    delete $1;
    $$ = c;
}
;

command : DRAW_COMMAND path SEMICOLON {
    Command *c = new Command(DRAW, *$2);
    delete $2;
    $$ = c;
    // c->execute(*root_env);
}
| DRAW_COMMAND NAME SEMICOLON {
    Variable v = root_env->get_variable(string($2));

    if (v.type != PATH)
        throw "MOTHERFUCKING ERROR!";
    
    Path p = *((Path*) v.value);

    Command *c = new Command(DRAW, p);
    $$ = c;
    // c->execute(*root_env);
}
| FILL_COMMAND path SEMICOLON {
    Command *c = new Command(FILL, *$2);
    delete $2;
    $$ = c;
    // c->execute(*root_env);
}
| FILL_COMMAND NAME SEMICOLON {
    Variable v = root_env->get_variable(string($2));

    if (v.type != PATH)
        throw "MOTHERFUCKING ERROR!";
    
    Path p = *((Path*) v.value);

    Command *c = new Command(FILL, p);
    $$ = c;
    // c->execute(*root_env);
}
;

variable: NAME EQ expression SEMICOLON {
$$ = new VariableAffectation(string($1), SCALAR, $3);
}
